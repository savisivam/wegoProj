<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <ImageView
          android:layout_marginTop="10dp"
          android:id="@+id/spec_img"
          android:layout_width="match_parent"
          android:layout_height="250dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spec_img"
            android:id="@+id/phone_names"
            android:text="frefrgggg"
            android:layout_marginLeft="18dp"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorPrimary" />
        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/phone_names"
            android:text="@string/website_text"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:textColor="@android:color/black" />
        <ProgressBar
            android:layout_below="@+id/text"
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="?attr/actionBarSize"
            android:layout_weight="1"
            android:layout_centerInParent="true"
            android:visibility="visible"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/online_detail_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text"
            android:nestedScrollingEnabled="false"
            android:layout_marginTop="10dp"
            android:layout_alignParentLeft="true"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/sold_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/sold_out"
            android:gravity="center"
            android:layout_below="@+id/online_detail_view"
            android:layout_marginTop="30dp"
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"/>
        <!--<Button
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/save_btn"
            android:layout_below="@id/sold_img"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="@string/save_txt"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:background="#00BCD4"/>

-->
</RelativeLayout>

</ScrollView>






